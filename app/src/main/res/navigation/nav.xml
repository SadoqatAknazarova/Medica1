<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/splash1Fragment">

    <fragment
        android:id="@+id/splash1Fragment"
        android:name="com.example.myapplication.Splash1Fragment"
        android:label="fragment_splash1"
        tools:layout="@layout/fragment_splash1" >
        <action
            android:id="@+id/action_splash1Fragment_to_splash2Fragment"
            app:destination="@id/splash2Fragment" />
    </fragment>
    <fragment
        android:id="@+id/splash2Fragment"
        android:name="com.example.myapplication.Splash2Fragment"
        android:label="fragment_splash2"
        tools:layout="@layout/fragment_splash2" >
        <action
            android:id="@+id/action_splash2Fragment_to_splash3Fragment"
            app:destination="@id/splash3Fragment" />
    </fragment>
    <fragment
        android:id="@+id/splash3Fragment"
        android:name="com.example.myapplication.Splash3Fragment"
        android:label="fragment_splash3"
        tools:layout="@layout/fragment_splash3" >
        <action
            android:id="@+id/action_splash3Fragment_to_splash4Fragment"
            app:destination="@id/splash4Fragment" />
    </fragment>
    <fragment
        android:id="@+id/splash4Fragment"
        android:name="com.example.myapplication.Splash4Fragment"
        android:label="fragment_splash4"
        tools:layout="@layout/fragment_splash4" >
        <action
            android:id="@+id/action_splash4Fragment_to_splash5Fragment"
            app:destination="@id/splash5Fragment" />
    </fragment>
    <fragment
        android:id="@+id/splash5Fragment"
        android:name="com.example.myapplication.Splash5Fragment"
        android:label="fragment_splash5"
        tools:layout="@layout/fragment_splash5" >
        <action
            android:id="@+id/action_splash5Fragment_to_signFragment"
            app:destination="@id/signFragment" />
    </fragment>
    <fragment
        android:id="@+id/signFragment"
        android:name="com.example.myapplication.SignFragment"
        android:label="fragment_sign"
        tools:layout="@layout/fragment_sign" />
</navigation>